@model IEnumerable<MovieFlow.Models.ReviewCatalog>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ViewReviewList.css" />
    <link href="~/App_Themes/SmokeAndGlass/SmokeAndGlass.css" rel="stylesheet" type="text/css" runat="server" />
</head>
<body>
    <div class="row">
        <div class="column-left-right"></div>
        <div class="column-middle">
            <h1>@ViewBag.Title</h1>
            <p>@ViewBag.Description</p>
            <!--I have created a back button when you enter in reviews-->
            <a asp-action="MoviesCatalogListView" asp-controller="Movies" class="button button1">Back to Movies</a>
            <table id="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ReviewName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReviewDescription)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>



                            <td id="demo1">
                                @Html.DisplayFor(modelItem => item.ReviewName)
                            </td>
                            <td id="demo2">
                                @Html.DisplayFor(modelItem => item.ReviewDescription)
                            </td>



                        </tr>
                    }
                </tbody>
            </table>
            <div class="col-md-4">
                <form asp-action="AddAReview">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                    <table id="AddMultipleUsersTable">
                        <tr>
                            <th>Name</th>
                            <th>Review</th>
                        </tr>
                        <tr>
                            <td id="value1ToAdd"><input type="text" id="cellOne" /></td>
                            <td id="value2ToAdd"><input type="text" id="cellTwo" /></td>



                        </tr>
                    </table>



                    <button type="button" onclick="addRow()">Send</button>
                    <button type="button" onclick="deleteRow()">Delete</button>



                </form>
            </div>
        </div>
        <div class="column-left-right"></div>

    </div>
    <script>
        function addRow() {
            alert("Thank you for your review!");
            var table = document.getElementById("table");
            var x = document.getElementById("table").rows.length;
            var row = table.insertRow(x);
            // Insert new cells (<td> elements) at the 1st and 2nd position of the "new" <tr> element:
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            cell1.innerHTML = document.getElementById('cellOne').value;
            cell2.innerHTML = document.getElementById('cellTwo').value;
            document.getElementById('cellOne').value = " ";
            document.getElementById('cellTwo').value = " ";
        }
    </script>

    <script>



        function deleteRow() {
            alert("You deleted the last review!");
            var x = document.getElementById("table").rows.length;
            document.getElementById("table").deleteRow(x - 1);
        }
    </script>
</body>
</html>
