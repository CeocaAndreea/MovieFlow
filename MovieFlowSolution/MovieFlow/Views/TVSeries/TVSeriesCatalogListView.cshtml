@model IEnumerable<MovieFlow.Models.TVSeriesCatalog>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/ViewReviewList.css" />
    <link href="~/App_Themes/SmokeAndGlass/SmokeAndGlass.css" rel="stylesheet" type="text/css" runat="server" />
</head>
<body>
    <div class="row">
        <div class="column-left-right"></div>
        <div class="column-middle">
            <h1>@ViewBag.Title</h1>
            <p>@ViewBag.Description</p>
            <h5>We have a number of @ViewBag.TotalTvSeries TvSeries for you.</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieBuget)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieBeginYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieEpisodsNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TvSerieSeasons)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
