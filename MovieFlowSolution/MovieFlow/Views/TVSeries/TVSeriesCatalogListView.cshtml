                                        <img src="~/TvSeriesImages/gossip_girl_image.jpg" width=300 height=200 />
                                    </a>
                                    <table class="AddTomMyListAndReviews" style="width:40%">
                                        <tr>
                                            <th>
                                                <a asp-action="MyList" asp-controller="home" class="button button1">Add to my List</a>
                                            </th>
                                            <th>
                                                <a asp-action="ReviewList" asp-controller="Review" class="button button1">Reviews</a>
                                            </th>
                                        </tr>
                                    </table>
                                }
                                @if (item.TvSerieName == "The Vampires Diaries")
